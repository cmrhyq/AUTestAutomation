{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "user_list_response.json",
    "title": "User List API Response",
    "description": "用户列表 API 响应格式的 JSON Schema",
    "type": "object",
    "properties": {
        "code": {
            "type": "integer",
            "description": "响应状态码，0 表示成功"
        },
        "message": {
            "type": "string",
            "description": "响应消息"
        },
        "data": {
            "type": "array",
            "description": "用户列表",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": ["integer", "string"],
                        "description": "用户 ID"
                    },
                    "username": {
                        "type": "string",
                        "minLength": 1,
                        "description": "用户名"
                    },
                    "email": {
                        "type": "string",
                        "description": "邮箱地址"
                    },
                    "phone": {
                        "type": ["string", "null"],
                        "description": "手机号"
                    },
                    "status": {
                        "type": "string",
                        "description": "用户状态"
                    },
                    "createdAt": {
                        "type": "string",
                        "description": "创建时间"
                    }
                },
                "required": ["id"]
            }
        }
    },
    "required": ["code"]
}

